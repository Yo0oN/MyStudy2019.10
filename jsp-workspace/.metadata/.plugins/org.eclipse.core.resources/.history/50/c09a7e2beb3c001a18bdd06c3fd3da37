<c:set var="parameterDong" value=${ param.dong } />

<c:if test="${ fn:length(parameterDong) != 0 }">
	<sql:query dataSource="jdbc/mariadb2" var="zc"
		sql="select * from zipcode where dong like '%${param.dong}%'" />
</c:if>
