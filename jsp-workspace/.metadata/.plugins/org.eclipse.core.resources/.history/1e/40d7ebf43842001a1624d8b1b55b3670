import java.io.IOException;
import java.io.InputStream;
import java.util.ArrayList;
import java.util.List;

import org.apache.ibatis.io.Resources;
import org.apache.ibatis.session.SqlSession;
import org.apache.ibatis.session.SqlSessionFactory;
import org.apache.ibatis.session.SqlSessionFactoryBuilder;

public class MyBatisEx02 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String resource = "myBatisConfig.xml";

		InputStream is = null;
		SqlSession sqlSession = null;

		try {
			is = Resources.getResourceAsStream(resource);
			SqlSessionFactory sqlSessionFactory = new SqlSessionFactoryBuilder().build(is);

			sqlSession = sqlSessionFactory.openSession();

			// List<DeptTO> lists = sqlSession.selectList("selectList1");
//			ArrayList<DeptTO> lists = (ArrayList)sqlSession.selectList("selectList1");
//			System.out.println(lists.size());
//			
//			for (int i = 0; i < lists.size(); i++) {
//				DeptTO to = lists.get(i);
//				System.out.println("deptno : " + to.getDeptno());
//				System.out.println("dname : " + to.getDname());
//				System.out.println("loc : " + to.getLoc());
//			}

			ArrayList<EmpTO> lists2 = (ArrayList) sqlSession.selectList("mybatis.selectList2");

			for (int i = 0; i < lists2.size(); i++) {
				EmpTO to = lists2.get(i);

				System.out.print("empno : " + to.getEmpno());
				System.out.print("	ename : " + to.getEname());
				System.out.println("	sal : " + to.getSal());
			}

			System.out.println("========================================");

			ArrayList<EmpTO> lists3 = (ArrayList) sqlSession.selectList("mybatis.selectList3");

			for (int i = 0; i < lists3.size(); i++) {
				EmpTO to = lists3.get(i);

				System.out.print("empno : " + to.getEmpno());
				System.out.print("	ename : " + to.getEname());
				System.out.println("	sal : " + to.getSal());
			}

			System.out.println("========================================");

			ArrayList<EmpSalgradeTO> lists4 = (ArrayList) sqlSession.selectList("mybatis.selectList4");

			for (int i = 0; i < lists4.size(); i++) {
				EmpSalgradeTO to = lists4.get(i);

				System.out.print("empno : " + to.getEmpno());
				System.out.print("	ename : " + to.getEname());
				System.out.print("	sal : " + to.getSal());
				System.out.print("	deptno : " + to.getDeptno());
				System.out.println("	grade : " + to.getGrade());
			}
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally {
			if (sqlSession != null)
				sqlSession.close();
			if (is != null)
				try {
					is.close();
				} catch (IOException e) {
				}
		}
	}

}
