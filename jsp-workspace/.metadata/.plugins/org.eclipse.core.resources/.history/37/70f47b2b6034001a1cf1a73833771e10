	to.setContent(multi.getParameter("content"));
	
	String mail = "";
	if (!multi.getParameter("mail1").trim().equals("") && !multi.getParameter("mail2").trim().equals("")) {
		to.setMail(multi.getParameter("mail1") + "@" + multi.getParameter("mail2"));
	}
	
	String filename_ori = "";
	String filename_ch = "";
	
