table {
	border: 1px solid black;
	border-collapse: collapse;
}

td {
	border: 1px solid black;
	width: 100px;
	text-align: center;
}
</style>
</head>
<body>
	<script type="text/javascript">
		document.write('<table>');
		for (var i = 1; i <= 10; i++) {
			document.write('<tr>')

			for (var j = 1; j <= i; j++) {
				document.write('<td>*</td>');
			}
			for (var j = 10 - i; j > 0; j--) {
				document.write('<td></td>');
			}
			/*
			for(var col=1; col <= 10; col++) {
				if (col <= i) {
					document.write('<td>*</td>');
				} else {
					document.write('<td></td>');
				}
			}
			 */
			document.write('</tr>');
		}

		document.write('\n');

		document.write('<table>');
		for (var i = 1; i <= 10; i++) {
			document.write('<tr>')
			for (var col = 1; col <= 10; col++) {
				if (col <= i) {
					document.write('<td>*</td>');
				} else {
					document.write('<td></td>');
				}
			}
			document.write('</tr>');
		}
		document.write('</table>')
	</script>
</body>
