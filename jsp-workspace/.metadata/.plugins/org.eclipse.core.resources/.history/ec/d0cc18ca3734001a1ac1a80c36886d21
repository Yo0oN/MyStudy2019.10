<%@page import="com.oreilly.servlet.multipart.DefaultFileRenamePolicy"%>
<%@page import="com.oreilly.servlet.MultipartRequest"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%
	String path = "C:/Java/OneDrive/Java/eclipse/jsp-workspace/AlbumEx/WebContent/upload";
	int filesize = 1024 * 1024 * 2;
	MultipartRequest muti = new MultipartRequest(request, path, filesize, "utf-8",
			new DefaultFileRenamePolicy());
	
	String seq = muti.getParameter("seq");
	String password = muti.getParameter("password");
	String subject = muti.getParameter("subject");
	String content = muti.getParameter("content");
	String mail = "";
	if (!muti.getParameter("mail1").trim().equals("") && !muti.getParameter("mail2").trim().equals("")) {
		mail = muti.getParameter("mail1") + "@" + muti.getParameter("mail2");
	}
%>