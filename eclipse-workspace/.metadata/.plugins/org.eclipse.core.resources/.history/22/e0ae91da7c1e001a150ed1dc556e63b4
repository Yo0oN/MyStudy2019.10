package MyChat;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.HashSet;

public class ChatWord {
	public static void main(String[] args) {
		InputStreamReader goodisr = null;
		FileInputStream gooddis = null;
		try {
			// 칭찬키워드들을 읽어온다.
			goodisr = new InputStreamReader(new FileInputStream("C:\\Java\\OneDrive\\Java\\datas\\good.txt"));
			String data = null;;
			while ((data = goodisr.read()) != -1) {
				System.out.print((char)goodisr.read());
			}
			System.out.println("end");
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} finally {if (goodisr != null) {try {goodisr.close();} catch (IOException e) {}}
		}
	}

	private ArrayList<String> good = new ArrayList<String>();

	private HashSet<String> bad = new HashSet<String>();

	public ArrayList<String> getGood() {
		return good;
	}

	public void setGood(String good) {
		this.good.add("최고야");
		this.good.add("멋져");
		this.good.add("착하다");
		this.good.add(good);
	}

	public HashSet<String> getBad() {
		return bad;
	}

	public void setBad(String bad) {
		this.bad.add(bad);
	}

