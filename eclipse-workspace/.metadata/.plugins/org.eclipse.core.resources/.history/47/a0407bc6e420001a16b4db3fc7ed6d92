import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

public class ChagePasswordDialogDAO {
	private Connection conn;
	private PreparedStatement pstmt;
	private int resulti;
	private boolean resultr;
	private ChagePasswordDialog cpd = new ChagePasswordDialog();
	
	public ChagePasswordDialogDAO() {
		// DB 접속
		String url = "jdbc:mysql://127.0.0.1:3306/account_book";
		String user = "root";
		String password = "123456";

		try {
			Class.forName("org.mariadb.jdbc.Driver");
			conn = DriverManager.getConnection(url, user, password);
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}

	public boolean CheckPassword(String nowPasswordField) {
		String sql = "select m_ID, m_Password from Member_info where m_ID = ? and m_Password = ?";
		
		return true;
	}
	public int ChagePassword(String date, String bigWhere, String smallWhere, String getMoney) {
		try {
			// 데이터 넣기
			String sql = "insert into Get_Money values(8, ?, ?, ?, ?)";
			pstmt = conn.prepareStatement(sql);
			pstmt.setString(1, date);
			pstmt.setString(2, bigWhere);
			pstmt.setString(3, smallWhere);
			pstmt.setString(4, getMoney);
			resulti = pstmt.executeUpdate();
		} catch (SQLException e) {
		}
		return resulti;
	}
}
