import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

public class JoinDialogDAO {
	private Connection conn;
	private PreparedStatement pstmt;

	public JoinDialogDAO() {
		// DB 접속
		String url = "jdbc:mysql://127.0.0.1:3306/accountBook";
		String user = "root";
		String password = "123456";

		try {
			Class.forName("org.mariadb.jdbc.Driver");
			conn = DriverManager.getConnection(url, user, password);
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		} catch (SQLException e) {
			e.printStackTrace();
		}

	}

	public String createUser(String name, String password, String passwordCheck, String birth, String sex) {
		// 회원 정보 추가 sql
		String sql = "insert into Member_info value(0, ?, ?, ?, ?, ?)";
		pstmt = conn.prepareStatement(sql);
		pstmt.executeUpdate();
		
		return null;
	}

}
