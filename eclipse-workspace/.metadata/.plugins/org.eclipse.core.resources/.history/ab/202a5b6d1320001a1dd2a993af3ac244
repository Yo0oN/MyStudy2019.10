import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;

public class JoinDialogDAO {
	private Connection conn;
	private PreparedStatement pstmt;

	public JoinDialogDAO() {
		// DB 접속
		String url = "jdbc:mysql://127.0.0.1:3306/accountBook";
		String user = "root";
		String password = "123456";

		try {
			Class.forName("org.mariadb.jdbc.Driver");
			conn = DriverManager.getConnection(url, user, password);
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		} catch (SQLException e) {
			e.printStackTrace();
		}

	}

	public String createUser(String id, String pass, String name, String birth) {
		try {
			String sql = "insert into Member_info value(0, ?, ?, ?, ?, ?)";
			pstmt = conn.prepareStatement(sql);
			pstmt.setString(1, id);
			pstmt.setString(2, pass);
			pstmt.setString(3, name);
			pstmt.setString(4, birth);
			pstmt.setString(5, sex);
			pstmt.executeUpdate();
		} catch (SQLException e) {
			e.printStackTrace();
		}
		
		return null;
	}

}
