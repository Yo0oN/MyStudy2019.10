				public void keyTyped(KeyEvent e) {
					// 일에 입력되는 부분 2자로 제한
					JTextField src = (JTextField) e.getSource();
					if (src.getText().length() >= 2) {
						e.consume();
					}
				}
			});
			dTextField.setText(d.getDate() + "");
			dTextField.setColumns(10);
			dTextField.setBounds(201, 6, 29, 23);
