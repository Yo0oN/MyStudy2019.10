				JButton cancelButton = new JButton("Cancel");
				cancelButton.addMouseListener(new MouseAdapter() {
					@Override
					public void mouseClicked(MouseEvent e) {
						// cancel 버튼은 그냥 창이 닫힌다.
						GetDialog.this.dispose();
